def esc_html(text: str) {
    return text
        :replace("&", "&amp;")
        :replace("<", "&lt;")
        :replace(">", "&gt;");
}

def esc_html_attr(text: str) {
    return text
        :replace("&", "&amp;")
        :replace("<", "&lt;")
        :replace(">", "&gt;")
        :replace(`"`, "&quot;")
        :replace(`'`, "&apos;");
}
