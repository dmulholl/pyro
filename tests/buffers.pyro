var foo = $buf();
assert $is_buf(foo);
assert !$is_buf("foo");
assert foo:count() == 0;

foo:write_byte(0x61);
assert foo:count() == 1;

foo:write_byte(0x62);
assert foo:count() == 2;

foo:write_byte(0x63);
assert foo:count() == 3;

var string = foo:to_str();
assert string == "abc";
assert foo:count() == 0;

foo:write_byte(0x64);
assert foo:count() == 1;
assert foo:get(0) == 0x64;

foo:set(0, 0x65);
assert foo:count() == 1;
assert foo:get(0) == 0x65;

assert foo[0] == 0x65;
foo[0] = 0x66;
assert foo[0] == 0x66;


var bar = $buf();
bar:write_be_u16(0xAABB);
assert bar:count() == 2;
assert bar[0] == 0xAA;
assert bar[1] == 0xBB;


var baz = $buf();
baz:write_le_u16(0xAABB);
assert baz:count() == 2;
assert baz[0] == 0xBB;
assert baz[1] == 0xAA;


var fmt1 = $buf();
fmt1:write(123);
fmt1:write("foo");
assert fmt1:count() == 6;
assert fmt1:to_str() == "123foo";
assert fmt1:count() == 0;


var fmt2 = $buf();
fmt2:write("{} and {}", 123, "foo");
assert fmt2:to_str() == "123 and foo";
assert fmt2:count() == 0;


var fmt3 = $buf();
fmt3:write("foo");
assert fmt3:count() == 3;
assert $str(fmt3) == "foo";
assert fmt3:count() == 3;
assert $str(fmt3) == "foo";
assert fmt3:count() == 3;


def $test_buf_with_size_and_fill() {
    var buf1 = $buf(10, 97);
    assert buf1:count() == 10;
    assert buf1[0] = 97;

    var buf2 = $buf(10, 'a');
    assert buf2:count() == 10;
    assert buf2[0] = 97;
    assert buf2[0] == 'a';
}
