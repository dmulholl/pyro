pub var foo;
assert foo == null;

pub var bar = 1;
assert bar == 1;

bar = 2;
assert bar == 2;

{
    assert bar == 2;
    bar = 3;
    assert bar == 3;
}
assert bar == 3;

def access_global() {
    assert bar == 3;
    bar = 4;
    assert bar == 4;
}
access_global();
assert bar == 4;

pub var baz;
pub var bam;
assert baz == null;
assert bam == null;
bam = baz = 123;
assert baz == 123;
assert bam == 123;

pub var a, b, c;
assert a == null;
assert b == null;
assert c == null;

pub var d = 123, e = 456, f = 789;
assert d == 123;
assert e == 456;
assert f == 789;

pub var (g, h, i) = $tup(123, 456, 789);
assert g == 123;
assert h == 456;
assert i == 789;

pub var (j, _, l) = $tup(123, 456, 789);
assert j == 123;
assert l == 789;

