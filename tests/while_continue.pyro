def is_even(int) {
    return int - 2 * (int // 2) == 0;
}

var i = 0;
var sum = 0;

while i < 10 {
    i += 1;
    if is_even(i) {
        continue;
    }
    sum += i;
}

assert sum == 1 + 3 + 5 + 7 + 9;


var foo = "global";
var sum = 0;
{
    var bar = "local";

    var x = 0;
    while x < 3 {
        x += 1;

        var y = 0;
        while y < 4 {
            y += 1;
            if x == y {
                continue;
            }
            sum += x * y;
            assert x != y;
            assert foo == "global";
            assert bar == "local";
        }

        assert foo == "global";
        assert bar == "local";
    }

    assert bar == "local";
}
assert foo == "global";
assert sum == 1*2 + 1*3 + 1*4 + 2*1 + 2*3 + 2*4 + 3*1 + 3*2 + 3*4;
