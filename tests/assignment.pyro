var foo = 1;
assert foo == 1;

foo = 2;
assert foo == 2;

foo += 3;
assert foo == 5;

var bar;
foo += bar = 10;
assert foo == 15;
assert bar == 10;

foo += foo;
assert foo == 30;

foo += bar += foo;
assert foo == 70;
assert bar == 40;

foo = bar = 99;
assert foo == 99;
assert bar == 99;

assert (foo -= 99) == 0;
assert foo == 0;

class Foo {
    pub var value;
}

var foo = Foo();
foo.value = 1;
assert foo.value == 1;
foo.value += 2;
assert foo.value == 3;

var vec = [1];
assert vec[0] == 1;
vec[0] = 2;
assert vec[0] == 2;
vec[0] += 1;
assert vec[0] == 3;
