var foo = "global";

{
    var bar = "local";
    var sum = 0;

    loop var x = 1; x < 4; x += 1 {
        loop var y = 1; y < 4; y += 1 {
            sum += x * y;
            assert foo = "global";
            assert bar = "local";
        }
    }

    assert sum == 1*1 + 1*2 + 1*3 + 2*1 + 2*2 + 2*3 + 3*1 + 3*2 + 3*3;
    assert bar == "local";
}

assert foo == "global";
